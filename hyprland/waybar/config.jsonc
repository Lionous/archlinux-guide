{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 30,
  "modules-left": ["hyprland/workspaces", "network", "hyprland/window"],
  "modules-center": ["clock", "custom/weather"],
  "modules-right": [
    "tray",
    "temperature",
    "battery",

    "backlight",
    "pulseaudio",
    "pulseaudio#microphone",
    "bluetooth",
  ],

  "hyprland/window": {
    "format": "üêß {}",
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "on-click": "activate",
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
    },
    "format": "{name}",
    "format-focused": "{name}",
    "format-visible": "{name}",
    "format-urgent": "{name}",
  },

  "custom/weather": {
    "tooltip": true,
    "format": "{}",
    "interval": 30,
    "exec": "~/.config/waybar/scripts/waybar-wttr.py",
    "return-type": "json",
  },

  "tray": {
    "icon-size": 15,
    "spacing": 10,
  },

  "clock": {
    "format": "ÔÄó {:%H:%M  ÔÅ≥ %a, %d %b}",
    "format-alt": "ÔÄó {:%H:%M:%S} ÔÅ≥ {:%Y-%m-%d}", // Formato alternativo al hacer clic
    "tooltip-format": "<big>{:%A, %d %B %Y}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#f5c2e7'><b>{}</b></span>",
        "days": "<span color='#a6e3a1'><b>{}</b></span>",
        "weeks": "<span color='#f9e2af'><b>W{}</b></span>",
        "weekdays": "<span color='#89dceb'><b>{}</b></span>",
        "today": "<span color='#f38ba8'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click": "tzlist", // Muestra zonas horarias (necesita 'tzlist' instalado)
      "on-click-right": "gnome-calendar", // Abre calendario gr√°fico
      "on-scroll-up": "tzup", // Cambia a zona horaria +1 (script personalizado)
      "on-scroll-down": "tzdown", // Cambia a zona horaria -1
    },
    "interval": 30, // Actualizaci√≥n m√°s precisa para segundos
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["Û∞Éö", "Û∞Éõ", "Û∞Éú", "Û∞Éù", "Û∞Éû", "Û∞Éü", "Û∞É†"],
    "on-scroll-up": "brightnessctl -d intel_backlight set +10%",
    "on-scroll-down": "brightnessctl -d intel_backlight set 10%-",
    "on-click": "brightnessctl -d intel_backlight set 50%",
    "min-length": 9,
    "smooth-scrolling-threshold": 1,
    "tooltip": false,
  },

  "battery": {
    "states": {
      "good": 80,
      "warning": 20,
      "critical": 15,
    },
    "format": "{icon} {capacity}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-plugged": "Û∞ö• {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    "interval": 20,
    "tooltip": true,
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Û∞ñÅ Muted",
    "on-click": "pamixer -t",
    "on-scroll-up": "pamixer -i 5",
    "on-scroll-down": "pamixer -d 5",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "Û∞ãã",
      "hands-free": "Û∞ãé",
      "headset": "Û∞ãê",
      "phone": "ÔÇï",
      "portable": "Û∞ìÉ",
      "car": "Û∞Ñõ",
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    },
    "tooltip": false,
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ± Muted",
    "on-click": "pamixer --default-source -t",
    "on-scroll-up": "pamixer --default-source -i 5",
    "on-scroll-down": "pamixer --default-source -d 5",
    "scroll-step": 5,
  },

  "temperature": {
    "hwmon-path": "/sys/class/thermal/thermal_zone0/temp",
    "critical-threshold": 80,
    "format": "Ôãâ {temperatureC}¬∞C",
    "format-critical": "Ôãá {temperatureC}¬∞C",
    "format-icons": ["Ôãã", "Ôãä", "Ôãâ", "Ôãà", "Ôãá"],
    "interval": 10,
    "tooltip": true,
  },

  "network": {
    "format-wifi": "Ôá´  {signalStrength}%",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{essid} - {ifname} via {gwaddr} Ôûñ",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected ‚ö†",
    "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}",
  },

  "bluetooth": {
    "format": "Ôäî {status}",
    "format-disabled": "",
    "format-no-controller": "",
    "format-connected": "Ôäî {num_connections}",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": "Ôäî {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
  },
}
